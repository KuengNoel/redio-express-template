{
    "compilerOptions": {
        "module": "es2022",
        "target": "es2022",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "declaration": true,
        "outDir": "dist",
        "sourceMap": true,
        "esModuleInterop": true
    },

    "include": ["src/**/*", "test/utilities/node.spec.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
